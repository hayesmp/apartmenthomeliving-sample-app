<div class="span12">
  <h3><%= @listing.fn %></h3>
</div>
<div class="span7">
  <div class="well">
    <div class="row">
      <div class="span2.5">
        <%= link_to image_tag(@listing.image), @listing.url %>
      </div>
      <div class="span3.5">
        <p>
          <%= link_to @listing.pricing, @listing.url, :class => "btn" %>
        </p>
        <h4><%= @listing.fn %></h4>
        <p>
          <%= @listing.address %><br>
          <%= @listing.city_state_zip %><br>
          <%= @listing.telephone %>
        </p>
        <p>
          <b>Other Floor Plans:</b>
          <% @listing.floorplans.each do |fp| %>
          <p>
            <%= link_to fp.headline.html_safe, @listing.url, :class => "btn" %>
          </p>
        <% end %>
        </p>
      </div>
    </div>
  </div>
  <%= render :partial => 'other_listings' %>
</div>
<div class="span4 well">
  <%= render :partial => 'map' %>
</div>